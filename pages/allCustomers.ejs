<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employees</title>
    <link rel="stylesheet" href="/styles/Styles.css">
</head>
<body>
    <main>
        <h2>All employees</h2>
        <table>
            <thead>
                <tr>
                    <th>Customer id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Ice Cream</th>
                    <th>Class</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach(customer => { %>
                    <tr>
                        <td><%= customer.customerId %></td>
                        <td><%= customer.firstname %></td>
                        <td><%= customer.lastname %></td>
                        <td><%= customer.favouriteIceCream %></td>
                        <td><%= customer.customerclass %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/"><button>Menu</button></a>
    </main>
</body>
</html>
